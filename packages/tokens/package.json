{
  "name": "@lucidui/tokens",
  "version": "0.0.1",
  "description": "Design tokens for Lucid UI - colors, typography, spacing for the design system layer",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./tailwind": {
      "types": "./dist/tailwind.d.ts",
      "import": "./dist/tailwind.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "design-tokens",
    "lucid-ui",
    "tailwind",
    "ai-to-ui",
    "design-system"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Deepractice/Lucid-UI.git",
    "directory": "packages/tokens"
  }
}
